@model IEnumerable<CAConferenceManagement.Models.EventDTO>

@{

    ViewData["Title"] = "Events";

    Layout = "~/Areas/Organizer/Views/Shared/_OrganizerLayout.cshtml";

}
<header class="header-area header-sticky" style="background-color:#7b6ada;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="#" class="logo">
                        <h1>PB503</h1>
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Serach Start ***** -->
                    <div class="search-input">
                        <form id="search" action="#">
                            <input type="text" placeholder="Type Something" id='searchText' name="searchKeyword" onkeypress="handle" />
                            <i class="fa fa-search"></i>
                        </form>
                    </div>

                    <!-- ***** Serach Start ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li class="scroll-to-section"><a asp-controller="Home" asp-action="Index">Home</a></li>

                        <li class="scroll-to-section"><a  class="active">Events</a></li>


                        <li class="scroll-to-section">
                            <a asp-area="" asp-controller="Account" asp-action="Login">Logout</a>
                        </li>

                    </ul>
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
</header>

<div class="main-banner" style="padding-top:100px" id="top">
    <div class="section events" id="events" style=" margin-top:0px;padding-top:0px">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-heading" style="margin-bottom:0px">
                        <h2 style="color:white">All Events</h2>
                    </div>
                    <div class="d-flex align-items-center" style="margin:50px">
                        <a asp-action="Create" class="btn btn-outline-light btn-round ms-auto">
                            <i class="fa fa-plus"></i> Create New
                        </a>

                    </div>
                </div>
                <div class="col-lg-12 col-md-8">
                    <div class="item">
                        <div class="row">

                            @foreach (var item in Model)
                            {
                                <div class="col-lg-9 position-relative w-100">
                                    <ul style="margin-bottom:50px">
                                        <li>
                                            <span class="category">@item.Title</span>
                                            <h4>@item.Description</h4>
                                        </li>
                                        <li style="width:20%">
                                            <span>Date:</span>
                                            <h6>@item.EventDate.ToString("dd.MM.yyyy")</h6>
                                        </li>
                                        <li>
                                            <span>Location:</span>
                                           
                                            <h6>@item.Location.Name</h6>

                                        </li>
                                        <li >
                                            <span>Organizer:</span>
                                            @foreach(var organizer in item.Organizers)
                                            {
                                                <h6>@organizer.Id</h6>
                                            }
                                          
                                        </li>

                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-angle-right"></i></a>
                                    </ul>

                                    @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a> *@
                                    @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Info</a> *@
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>